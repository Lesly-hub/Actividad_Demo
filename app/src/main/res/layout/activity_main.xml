<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etCodigoBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:hint="Codigo de Barras"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:textAlignment="center"
        android:layout_below="@+id/etCodigoBarras"/>

    <EditText
        android:id="@+id/etMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca"
        android:textAlignment="center"
        android:layout_below="@+id/etDescripcion"/>

    <EditText
        android:id="@+id/etPrecioCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio Compra"
        android:textAlignment="center"
        android:layout_below="@+id/etMarca"/>

    <EditText
        android:id="@+id/etPrecioVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio Venta"
        android:textAlignment="center"
        android:layout_below="@+id/etPrecioCompra"/>

    <EditText
        android:id="@+id/etExistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Existencia"
        android:textAlignment="center"
        android:layout_below="@+id/etPrecioVenta"/>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etExistencia"/>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_below="@+id/etExistencia"
        android:layout_toLeftOf="@+id/btnBuscar"/>
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_below="@+id/etExistencia"
        android:layout_toRightOf="@+id/btnBuscar" />
    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_below="@+id/btnBuscar"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/lbProductos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnEliminar"/>

</RelativeLayout>